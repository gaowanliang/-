.demo-radio-group {
  width: 100%;
  margin: 0px 10px;
}

.van-radio {
  margin: 10px 0;
  width: 25%;
}

.con {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.check {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10px;
  margin: 20rpx 18.75rpx;
  padding: 0 2rpx;
  height: 100rpx;
  width: 80%;
  font-size: 22px;
  background: #f1c40f;
  color: #fbfee6;
  border-bottom: 3px solid #f39c12;
}

.check:active {
  border-top: 3px solid #f6f6f6;
  border-bottom: 3px solid #f1c40f;
}
