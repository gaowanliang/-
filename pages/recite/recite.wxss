/* pages/recite/recite.wxss */

.con {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.r {
  border-radius: 25px;
  background: #f7f7f7;
  padding: 20px 0 0 0;
  /*position: relative;*//*display: flex;*/
  width: 95%;
  height: 250rpx;
  /*box-shadow: 0rpx 10rpx 50rpx 10rpx rgba(85, 85, 85, 0.10);*/
  border: 3px solid #e4e4e2;
}

.judgeall {
  margin: 20rpx 0;
  height: 500rpx;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
}

.judge {
  display: flex;
  align-items: center;
  border-radius: 10px;
  justify-content: space-between;
  margin: 20rpx 18.75rpx;
  padding: 0 2rpx;
  height: 100rpx;
  width: 95%;
  background: #fafafa;
  border-bottom: 3px solid #e4e4e2;
  /*box-shadow: 0rpx 10rpx 50rpx 10rpx rgba(85, 85, 85, 0.014);*/
}

.judge:active {
  border-bottom: 3px solid #fafafa;
}

.smallicon {
  display: flex;
  width: 64rpx;
  height: 64rpx;
  float: right;
}

.cons {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}

.check {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10px;
  margin: 20rpx 5rpx;
  height: 100rpx;
  width: 80%;
  font-size: 22px;
  background: #76c700;
  color: #fbfee6;
  border-bottom: 3px solid #55a50d;
}

.check:active {
  border-top: 3px solid #f6f6f6;
  border-bottom: 3px solid #76c700;
}

.buhui {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10px;
  margin: 20rpx 5rpx;
  height: 100rpx;
  width: 17%;
  font-size: 20px;
  background: #dfe6e9;
  color: #2d3436;
  border-bottom: 3px solid #b2bec3;
}

.buhui:active {
  border-top: 3px solid #f6f6f6;
  border-bottom: 3px solid #dfe6e9;
}

.check:disabled {
  background-color: #e4e4e4;
  border-bottom: 3px solid #f6f6f6;
  color: #b0b0b0;
}

.top {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  width: 100%;
  height: 50rpx;
  padding: 10px;
  border-radius: 0;
  /*line-height: 10px;*/
  background-color: rgba(0, 0, 0, 0.8) !important;
}
